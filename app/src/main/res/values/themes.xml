<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyAppCustomized" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secundary_color</item>
        <item name="colorSecondaryVariant">@color/secundary_color</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ButtonPrimary">
        <item name="android:background">@drawable/btn_firts</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/very_dark_red</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>